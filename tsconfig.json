{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "build",
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "downlevelIteration": true,
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./*"],
      "types/*": ["./@types/*"]
    },
    "typeRoots": ["./node_modules/@types", "./@types/types.d.ts"]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./*.js",
    "**/*.svg"
  ],
  "exclude": ["node_modules"]
}
